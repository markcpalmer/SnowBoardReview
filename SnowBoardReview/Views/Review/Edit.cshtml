@model SnowBoardReview.Models.Review

@{
    ViewData["Title"] = "Edit";
    Layout = "_layout";
}
@addTagHelper * ,Microsoft.AspNetCore.Mvc.TagHelpers


<h2>Edit</h2>

<h3>@Model.Board.ModelName</h3><h3>Review</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="BoardID" type="hidden" value="@Model.BoardID" class="form-control" />
            </div>
            <input type="hidden" value="@Model.ReviewID" asp-for="ReviewID" />
            <div class="form-group">
                <label asp-for="UserReview" value="@Model.ReviewID" class="control-label"></label>
                <input asp-for="UserReview" class="form-control" />
                <span asp-validation-for="UserReview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

